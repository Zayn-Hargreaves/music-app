extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
block main 
    +box-head(pageTitle)   
    if(singer.fullName)
        h1(class="mb-4") #{singer.fullName}
    if(singer.avatar)
        div(class="mb-4")
            img(
                src=singer.avatar 
                style="width: 100px"
            )
    if(singer.status)
        div(class="mb-4")
            span Trạng thái: 
            if(singer.status ==="active")
                span(class="badge badge-success") Hoạt động
            else 
                span(class="badge badge-danger") Không hoạt động
    a(
        href=`/${prefixAdmin}/singers/edit/${singer.id}`
        class = "btn btn-warning btn-sm"
    ) Chỉnh sửa 
