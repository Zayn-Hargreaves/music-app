extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main
    h1(class="h4") Cập nhập thông tin cá nhân
    +alert-error(8000)
    +alert-success(8000)


    form(
        action=`/user/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-froup")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
        div(class="form-froup")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-froup")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="form-froup")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập Nhập
